@{
  Layout = "_Layout";
  ViewBag.Title = "All Reviews";
}

@using FavoriteRestaurants.Models;
@model List<FavoriteRestaurants.Models.Review>;

<div class="jumbotron">
  <h1>Reviews</h1>
</div>

<div class="content">
  @if (@Model.Count == 0)
  {
    <h3>No reviews have been added yet!</h3>
    <p>Model Count = @Model.Count </p>
  } 

  <ul>
    @foreach (Review review in Model)
    {
      <li> Review of @review.Restaurant.Name by @review.ReviewerName on @review.ReviewDate.Month/@review.ReviewDate.Day/@review.ReviewDate.Year
        <ul>
          <li>Rating: @review.ReviewRating</li>
          <li>@review.Description,</li>
        </ul>
      </li>
    }
  </ul>
</div>

<div class="links2">
  <div class="link">@Html.ActionLink("Add new Review", "Create")</div>
  <div class="link">@Html.ActionLink("See all restaurants", "Index", "Restaurants")</div>
</div>

@Html.Partial("Footer")