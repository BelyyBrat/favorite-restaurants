@{
  Layout = "_Layout";
}

@using FavoriteRestaurants.Models
@model FavoriteRestaurants.Models.Restaurant

<div class="jumbotron">
  <h2>Search Restaurants</h2>
</div>

<div class="form">
  @using (Html.BeginForm("SearchResults", "Restaurants", FormMethod.Post))
  {
    @Html.Label("Search Criteria")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.RadioButtonFor(Model => Model.Description,"Name")
    @Html.Label("By Name")
    <br> 
    @Html.Label("By Price Level")
    @Html.DropDownListFor(model => model.PriceLevel, new SelectList(Enum.GetValues(typeof(PriceLevel))), "Select Price Level")
    <br>
    @Html.Label("By Rating")
    @Html.DropDownListFor(model => model.Rating, new SelectList(Enum.GetValues(typeof(Rating))), "Select Rating")
    <br>
    @Html.LabelFor(model => model.Type)
    @Html.DropDownList("RestaurantType")
    <br>
    @Html.CheckBoxFor(Model => Model.Vegetarian, true) 
    @Html.Label("By Vegetarian")
    <br>

    <input type="submit" value="Find restaurant" class="btn btn-secondary"/>
  }

<div class="links2">
  <div class="link">
    <p>@Html.ActionLink("Add a new restaurant", "Create")</p>
  </div>
  <div class="link">
    <p>@Html.ActionLink("List of Restaurants", "Index")</p>
  </div>
</div>   

@Html.Partial("Footer")