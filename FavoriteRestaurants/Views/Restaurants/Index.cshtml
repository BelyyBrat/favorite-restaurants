@{
  Layout = "_Layout";
}

@using FavoriteRestaurants.Models;
@model List<FavoriteRestaurants.Models.Restaurant>;

<div class="jumbotron">
  <h1>Restaurants</h1>
</div>

<div class="content">
  @if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Type</li>
}
</div>


<div class="links2">
  <div class="link">@Html.ActionLink("Add new Restaurant", "Create")</div>
  <div class="link">@Html.ActionLink("See all cuisines", "Index", "Cuisines")</div>
</div>

@Html.Partial("Footer")
