@{
  Layout = "_Layout";
}

@using FavoriteRestaurants.Models;
@model List<FavoriteRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Description}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
}

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>