@{
  Layout = "_Layout";
  ViewBag.Title = "Details Cuisine";
}

@using FavoriteRestaurants.Models;
@model FavoriteRestaurants.Models.Cuisine;

<div class="jumbotron">
  <h2>Cuisine Details: @Html.DisplayFor(model => model.Type)</h3></h2>
</div>
<hr />

@if (Model.Type == "French")
{
  <img src="https://cdn.vox-cdn.com/thumbor/0ezcFAbJLt2qYI8Dpz9x9Xpp014=/0x0:3000x2000/1200x675/filters:focal(1232x1367:1712x1847)/cdn.vox-cdn.com/uploads/chorus_image/image/59627533/20160912_Le_Coucou_rabbit_28.0.0.jpg" class="img-fluid">
} 
else if (Model.Type == "Italian")
{
  <img src="https://www.takeaway.com/foodwiki/uploads/sites/11/2019/06/italian-cuisine-47-1440x600.jpg" class="img-fluid">
}
else if (Model.Type == "Chinese")
{
  <img src="https://www.thenational.ae/image/policy:1.884982:1562830908/RM_20190703_DESICHINESE_20.jpg?f=16x9&w=1200&$p$f$w=dfb357e" class="img-fluid">
}
else if (Model.Type == "Mexican")
{
  <img src="https://bigseventravel.com/wp-content/uploads/2019/06/Screenshot-2019-06-23-at-13.06.47.png" class="img-fluid">
}

<div class="content">
  @Html.DisplayFor(model => model.Type) Restaurants:
  <ul>
    @if (@Model.Restaurants.Count == 0)
    {
      <p>no restaurants found</p>
    }

    @foreach (Restaurant restaurant in @Model.Restaurants)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</li>
    }
  </ul>
</div>



<div class="links4">
  <div class="link">@Html.ActionLink("Back to Cuisines", "Index")</div>
  <div class="link">@Html.ActionLink("Edit Cuisine", "Edit", new { id = Model.CuisineId })</div>
  <div class="link">@Html.ActionLink("Delete Cuisine", "Delete", new { id = Model.CuisineId })</div>
  <div class="link">@Html.ActionLink("Add new Restaurant", "Create", "Restaurants")</div>
</div>
 @Html.Partial("Footer")
