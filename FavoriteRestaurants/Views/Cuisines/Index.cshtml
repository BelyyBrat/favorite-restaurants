@{
  Layout = "_Layout";
}

@using FavoriteRestaurants.Models;
@model List<FavoriteRestaurants.Models.Cuisine>;
<div class="jumbotron">
<h1>Cuisines</h1>
</div>

<div class="content">
  @if (@Model.Count == 0)
  {
    <h3>No cuisines have been added yet!</h3>
  } 

  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
  }
</div>


<p>@Html.ActionLink("Add new Cuisine", "Create")</p>

@Html.Partial("Footer")