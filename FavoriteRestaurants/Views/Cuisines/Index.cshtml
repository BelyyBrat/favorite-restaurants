@{
  Layout = "_Layout";
}

@using FavoriteRestaurants.Models;
@model List<FavoriteRestaurants.Models.Cuisine>;
<div class="jumbotron">
<h1>Cuisines</h1>
</div>

<img src="https://www.foodbusinessnews.net/ext/resources/2019/6/InternationalCuisinesLead1200x800.jpg?1560515989" class="img-fluid" alt="">

<div class="content">
  @if (@Model.Count == 0)
  {
    <h3>No cuisines have been added yet!</h3>
  } 

  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
  }
</div>


<div class="link">@Html.ActionLink("Add new Cuisine", "Create")</div>

@Html.Partial("Footer")